@model EmployeeDeptProject.Web.Models.Employee
@{
    ViewData["Title"] = "EmpEdit";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Employee </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-bg-dark"></div>
        <div class="mb-3">
            <label asp-for="EmpId"></label>
            <input asp-for="EmpId" readonly class="form-control" />
            <span asp-validation-for="EmpId" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmpName"></label>
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-bg-danger"></span>
            @*@Html.ValidationMessageFor(m=>m.CategoryName,"category not exceed than 20")*@
        </div>
        <div class="mb-3">
            <label asp-for="EmpSalary"></label>
            <input asp-for="EmpSalary" class="form-control" />
            <span asp-validation-for="EmpSalary"></span>
        </div>
        @*<div class="mb-3">
            <label asp-for="DeptId"></label>
            <input asp-for="DeptId" class="form-control" />
            <span asp-validation-for="DeptId"></span>
        </div>*@
        <div>
            @Html.LabelFor(model => model.Departments.DeptName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col md-10">
                @Html.DropDownListFor(model=>model.DeptId,(SelectList)ViewBag.DeptId,new{@class="form-control"})
            </div>
        </div>
        <div class="">
           <button type="submit" class="btn btn-primary" style="width:100px"> Edit </button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark"> Back </a>
        </div>
    </div>

</form>


