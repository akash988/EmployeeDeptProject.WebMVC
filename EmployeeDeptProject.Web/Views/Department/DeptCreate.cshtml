@model EmployeeDeptProject.Web.Models.Department
@{
    ViewData["Title"] = "DeptCreate";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Add Department </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-bg-dark"></div>
        <div class="mb-3">
            <label asp-for="DeptName"></label>
            <input asp-for="DeptName" class="form-control" />
            <span asp-validation-for="DeptName" class="text-bg-danger"></span>
            @*@Html.ValidationMessageFor(m=>m.CategoryName,"category not exceed than 20")*@
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:100px"> Add </button>
        <a asp-controller="Department" asp-action="DeptIndex" class="btn btn-outline-dark"> Back </a>
    </div>

</form>
