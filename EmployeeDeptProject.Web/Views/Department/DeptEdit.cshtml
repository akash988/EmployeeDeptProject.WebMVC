@model EmployeeDeptProject.Web.Models.Department
@{
    ViewData["Title"] = "EmpEdit";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Department </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-bg-dark"></div>
        <div class="mb-3">
            <label asp-for="DeptId"></label>
            <input asp-for="DeptId" readonly class="form-control" />
            <span asp-validation-for="DeptId" class=text-bg-danger></span>
        </div>
        <div class="mb-3">
            <label asp-for="DeptName"></label>
            <input asp-for="DeptName" class="form-control" />
            <span asp-validation-for="DeptName" class=text-bg-danger></span>
            
        </div>
        

        <button type="submit" class="btn btn-primary" style="width:100px"> Edit </button>
        <a asp-controller="Department" asp-action="DeptIndex" class="btn btn-outline-dark"> Back </a>
    </div>

</form>






